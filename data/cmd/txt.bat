@ECHO OFF
GOTO :%1





:FADE-IN <"Text": string>
SET TMP.I_ALL=0
SET TMP.RGB=0
ECHO.[s

:RENDER_RE
SET /A TMP.I_ALL+=1
SET /A TMP.RGB+=17
SET TMP.I=1

:RENDER_NEXT
SET /A TMP.I+=1
SET TMP.ARG=
CALL SET TMP.ARG=%%%TMP.I%
IF DEFINED TMP.ARG (
	CALL :TEXT_FX %TMP.ARG%
	GOTO :RENDER_NEXT
)
IF %TMP.I_ALL% LEQ 15 GOTO :RENDER_RE
ECHO ON
@EXIT /B 0


:FADE-OUT <"Text": string>
SET TMP.I_ALL=0
SET TMP.RGB=255
ECHO.[s

:FADE_OUT_RENDER_RE
SET /A TMP.I_ALL+=1
SET /A TMP.RGB-=16
SET TMP.I=1

:FADE_OUT_RENDER_NEXT
SET /A TMP.I+=1
SET TMP.ARG=
CALL SET TMP.ARG=%%%TMP.I%
IF DEFINED TMP.ARG (
	CALL :TEXT_FX %TMP.ARG%
	GOTO :FADE_OUT_RENDER_NEXT
)
IF %TMP.I_ALL% LEQ 15 GOTO :FADE_OUT_RENDER_RE
ECHO ON
@EXIT /B 0


:TEXT_FX
SET TMP.ARG=%TMP.ARG:"=%
ECHO.[u[%TMP.I%B[2A%RGB%%TMP.RGB%;%TMP.RGB%;%TMP.RGB%m%TMP.ARG%
HELP /? >NUL
IF %TMP.I_ALL% EQU 15 ECHO.[u[%TMP.I%B[2A
EXIT /B 0





:TYPE [/A: Auto Next Line] <"Text": string>
ECHO.[s
SET TMP.ARG=%*
SET TMP.ARG=%TMP.ARG:~7%
IF /I "%TMP.ARG:~0,2%"=="/A" (
	SET TMP.ARG=%TMP.ARG:~3%
	SET TMP.I_LINE=0
) ELSE SET TMP.I_LINE=
SET TMP.I=0

:APPEAR-RE
CALL SET TMP.OUT=%%TMP.ARG:~%TMP.I%,1%%
ECHO.[u%TMP.OUT%[s
IF DEFINED TMP.I_LINE IF "%TMP.I_LINE%"=="125" (
	ECHO.[s
	SET TMP.I_LINE=-1
)

IF DEFINED TMP.OUT (
	HELP >NUL
	HELP >NUL
	IF DEFINED TMP.I_LINE SET /A TMP.I_LINE+=1
	SET /A TMP.I+=1
	GOTO :APPEAR-RE
)

EXIT /B 0