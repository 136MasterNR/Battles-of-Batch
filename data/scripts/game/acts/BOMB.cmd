IF NOT DEFINED VERCODE EXIT
IF %PLAYER.ITEM.BOMB% LSS 1 (
	ECHO.[47;3H%RGB%255;18;18mYou don't have enough items![0m
	PAUSE>NUL
	ECHO.[47;3H                            
	GOTO :EOF
)
IF NOT EXIST "%DATA_SETTINGS%\OFFSOUNDS.dll" (
	SETLOCAL ENABLEDELAYEDEXPANSION
	FOR /F "DELIMS=:" %%A IN ('TASKLIST /FI "WINDOWTITLE eq wscript.exe%TARGETAEXT%"') DO IF NOT %%A==INFO TASKKILL /F /FI "WINDOWTITLE eq wscript.exe%TARGETAEXT%" /T>NUL
	SET "TARGETAEXT=.sfx"
	SET "TARGETAUDIO=%SFX.BOMB%.mp3"
	(
		ECHO Set Sound = CreateObject^("WMPlayer.OCX.7"^)
		ECHO Sound.URL = "!TARGETAUDIO!"
		ECHO Sound.Controls.play
		ECHO Sound.settings.volume = %VOLUME%
		ECHO Sound.settings.setMode "loop", False
		ECHO Sound.Controls.play
		ECHO While Sound.playState ^<^> 1
		ECHO      WScript.Sleep 100
		ECHO Wend
	) > "%DATA_TMP_A%"
	START /min "wscript.exe%TARGETAEXT%" cmd /c START /min /wait "" "%DATA_TMP_A%"^|^|EXIT^&DEL /Q "%DATA_TMP_A%"^|^|EXIT^&EXIT
	ENDLOCAL
)
SET "file=%DATA_SAVES%\PLAYERDATA.cmd"
SET /A Line#ToSearch=6
SET /A PLAYER.ITEM.BOMB-=1
SET "Replacement=SET PLAYER.ITEM.BOMB=%PLAYER.ITEM.BOMB%"
(FOR /F "tokens=1*delims=:" %%a IN ('findstr /n "^" "%file%"') DO (
	SET "Line=%%b"
	IF %%a equ %Line#ToSearch% SET "Line=%Replacement%"
	SETLOCAL ENABLEDELAYEDEXPANSION
	ECHO(!Line!
	ENDLOCAL
))>"%file%.new"
MOVE "%file%.new" "%file%">NUL
IF %ENEMY.HP.NOW.1%==0 (SET "PLAYER.ATTACK.AMOUNT.1=0") ELSE SET /A "PLAYER.ATTACK.AMOUNT.1=%random% %% 36 +15"
IF %ENEMY.HP.NOW.2%==0 (SET "PLAYER.ATTACK.AMOUNT.2=0") ELSE SET /A "PLAYER.ATTACK.AMOUNT.2=%random% %% 36 +15"
IF %ENEMY.HP.NOW.3%==0 (SET "PLAYER.ATTACK.AMOUNT.3=0") ELSE SET /A "PLAYER.ATTACK.AMOUNT.3=%random% %% 36 +15"
SET /A "PLAYER.ATTACK.AMOUNT.%INPUTATK%=%random% %% 15 +45"
IF NOT %ENEMY.HP.NOW.1% LEQ 0 (
	SET /A "ENEMY.HP.NOW.1=%ENEMY.HP.NOW.1% -%PLAYER.ATTACK.AMOUNT.1%"
)
IF NOT %ENEMY.HP.NOW.2% LEQ 0 (
	SET /A "ENEMY.HP.NOW.2=%ENEMY.HP.NOW.2% -%PLAYER.ATTACK.AMOUNT.2%"
)
IF NOT %ENEMY.HP.NOW.3% LEQ 0 (
	SET /A "ENEMY.HP.NOW.3=%ENEMY.HP.NOW.3% -%PLAYER.ATTACK.AMOUNT.3%"
)
SET /A PLAYER.ATTACK.AMOUNT=%PLAYER.ATTACK.AMOUNT.1%+%PLAYER.ATTACK.AMOUNT.2%+%PLAYER.ATTACK.AMOUNT.3%
IF %ENEMY.HP.NOW.1% LSS 0 ( SET /A "ENEMY.HP.NOW.1=0" ) ELSE IF %ENEMY.HP.NOW.1% LSS 0 SET "PLAYER.ATTACK.AMOUNT.1=0"
IF %ENEMY.HP.NOW.2% LSS 0 ( SET /A "ENEMY.HP.NOW.2=0" ) ELSE IF %ENEMY.HP.NOW.2% LSS 0 SET "PLAYER.ATTACK.AMOUNT.2=0"
IF %ENEMY.HP.NOW.3% LSS 0 ( SET /A "ENEMY.HP.NOW.3=0" ) ELSE IF %ENEMY.HP.NOW.3% LSS 0 SET "PLAYER.ATTACK.AMOUNT.3=0"
SET PLAYER.ATTACK.ENEMY=ALL enemies
GOTO :EOF